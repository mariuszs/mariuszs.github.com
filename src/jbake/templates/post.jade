extends layout.jade

block title
  #{content.title}

block content

  div.row
    p
      div.col-md-9
        em #{dates.format(content.date,"dd MMMM yyyy")}
      div.col-md-3
        div.pull-right
          script(src="https://apis.google.com/js/platform.js", async defer)
          div.g-plusone(href="#{config.site_host}#{content.uri}")

  p !{content.body}

  div#disqus_thread

  script(type='text/javascript').
    var disqus_shortname = '#{config.disqus_username}';
    var disqus_identifier = '#{content.uri}';
    var disqus_title = '#{content.title}';
    var disqus_url = '#{config.site_host}#{content.uri}';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();

  noscript Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>

  hr


