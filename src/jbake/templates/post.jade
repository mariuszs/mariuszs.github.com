extends layout.jade

block title
  | #{content.title}

block content


  div.row
    div.col-md-9
      p.blog-post-meta
        em #{dates.format(content.date,"dd MMMM yyyy")}
    div.col-md-3
      div.pull-right

        a(class="btn btn-social-icon btn-google-plus",
          href="https://plus.google.com/share?url=#{config.site_host}#{content.uri}",
          target="_blank")
          i(class="fa fa-google-plus")

        a(class="btn btn-social-icon btn-twitter",
          href="http://twitter.com/share?url=#{config.site_host}#{content.uri}&text=#{content.title}",
          target="_blank")
          i(class="fa fa-twitter")


  p !{content.body}

  div#disqus_thread

  script(type='text/javascript').
    var disqus_shortname = '#{config.disqus_username}';
    var disqus_identifier = '#{content.uri}';
    var disqus_title = '#{content.title}';
    var disqus_url = '#{config.site_host}#{content.uri}';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();

  noscript Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>

  hr


