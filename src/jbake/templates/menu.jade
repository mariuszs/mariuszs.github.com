div.blog-masthead
    div.container
        nav.blog-nav
            if content.title
                a.blog-nav-item(href='#{content.rootpath}index.html') Home
            else
                a.blog-nav-item(class="active", href='#{content.rootpath}index.html') Home
            if content.title == "About"
                a.blog-nav-item(class="active", href='#{content.rootpath}about.html') About
            else
                a.blog-nav-item(href='#{content.rootpath}about.html') About

            a.blog-nav-item(href='#{content.rootpath}#{config.feed_file}') Subscribe

            a.blog-nav-item(href='https://github.com/mariuszs')
                i(class="fa fa-github")
                |  Github

            a.blog-nav-item(href='https://twitter.com/mariusz_s')
                i(class="fa fa-twitter")
                |  Twitter

            a.blog-nav-item(href='http://stackoverflow.com/users/516167/mariuszs')
                i(class="fa fa-stack-overflow")
                |  Stack Overflow


